@model WebApplication3.Models.Model.Blog
@{
    ViewBag.Title = "BlogDetay";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}
    <section id="inner-headline">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="breadcrumb">
                        <li><a href="#"><i class="fa fa-home"></i></a><i class="icon-angle-right"></i></li>
                        <li class="active">Blog Detay</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
    <section id="content">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">

                    <article>
                        <div class="post-image">
                            <div class="post-heading">
                                <h3>@Model.Baslik</h3>
                            </div>
                            <div class="bottom-article">
                                <ul class="meta-post">


                                    <li><i class="icon-folder-open"></i><a href="#"> @Model.Kategori.KategoriAd</a></li>
                                    @*<li><i class="icon-comments"></i><a href="#">4 Comments</a></li>*@
                                </ul>

                            </div>
                            <img src="@Model.ResimURL" alt="@Model.Baslik" />
                        </div>
                        <p>
                            @Html.Raw(Model.Icerik)
                        </p>

                    </article>


                    <div id="pagination">
                        
                    </div>
                </div>
                <div class="col-lg-4">
                    <aside class="right-sidebar">
                        <div class="widget">
                            <form class="form-search">
                                <input class="form-control" type="text" placeholder="Search..">
                            </form>
                        </div>
                        <div class="widget">
                            <h5 class="widgetheading">Kategoriler</h5>
                            <ul class="cat">
                                <li><i class="icon-angle-right"></i><a href="#">Genel</a><span> (20)</span></li>
                       
                            </ul>
                        </div>
                        <div class="widget">
                            <h5 class="widgetheading">Son Blog Yazıları</h5>
                            <ul class="recent">
                                <li>
                                    <img src="img/dummies/blog/65x65/thumb1.jpg" class="pull-left" alt="" />
